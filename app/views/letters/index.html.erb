<% title "Letters" %>

<table>
  <tr>
    <th>Content</th>
    <th>Recipient</th>
    <th>Province</th>
    <th>Address</th>
    <th>Postcode</th>
    <th>Published At</th>
  </tr>
  <% for letter in @letters %>
    <tr>
      <td><%= letter.content %></td>
      <td><%= letter.recipient %></td>
      <td><%= letter.province %></td>
      <td><%= letter.address %></td>
      <td><%= letter.postcode %></td>
      <td><%= letter.published_at %></td>
      <td><%= link_to "Show", letter %></td>
      <td><%= link_to "Edit", edit_letter_path(letter) %></td>
      <td><%= link_to "Destroy", letter, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Letter", new_letter_path %></p>
